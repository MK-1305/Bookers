<h1>Books</h1>


<table>
<thead>
<tr>
<th>Title</th>
<th>Body</th>
<th></th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>
<%= link_to "show", book_path(book.id) %>
<%= link_to "edit", edit_book_path(book.id) %>
<%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
</td>
<% end %>
</tbody>
</table>
<h3>New book</h3>

<div class="form">
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
 <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
error
<% end %>


	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<div class="form-button"><%= f.submit 'Create Book' %></div>

</div>
<% end %>